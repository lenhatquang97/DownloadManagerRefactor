<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyDownloadManager" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>

    </style>

    <style name="CustomAlertDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/border_radius</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="AlertDialogShow" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorSurface">@color/black</item>
        <item name="android:background">@color/grey_dialog</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="MoreButtonFunction.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@color/black</item>
    </style>

    <style name="CustomTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MoreButtonStyle">
        <item name="tint">@color/white</item>
    </style>

    <style name="DialogBackground">
        <item name="android:background">@color/grey_dialog</item>
    </style>

    <style name="EndIconStyle">
        <item name="android:drawableTint">@color/white</item>
    </style>
</resources>