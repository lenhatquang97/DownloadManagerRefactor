<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyDownloadManager" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.MyDownloadManager" parent="Base.Theme.MyDownloadManager" />

    <style name="AppBar" parent="Theme.Material3.DayNight">
        <item name="titleTextColor">@color/white</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/border_radius</item>
    </style>

    <style name="AlertDialogShow" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorSurface">@color/white</item>
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/blue</item>
        <item name="rippleColor">#55B4FB</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#979797</item>
        <item name="rippleColor">#a4a4a4</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/blue
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/grey
        </item>
    </style>

    <style name="checkedChip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="checkedIcon">@drawable/ic_baseline_check_white</item>
    </style>


    <style name="MoreButtonFunction.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:itemBackground">@color/white</item>
    </style>


    <style name="mySlider" parent="@style/Widget.MaterialComponents.Slider">
        <item name="labelStyle">@style/myTooltip</item>
    </style>

    <style name="myTooltip" parent="Widget.MaterialComponents.Tooltip">
        <!-- background color of the Tooltip -->
        <item name="backgroundTint">@color/blue</item>
    </style>

</resources>